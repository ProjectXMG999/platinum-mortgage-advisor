  "default_weights": {
    "description": "Domyślne wagi dla standardowego klienta",
    "koszt_kredytu": 35,
    "elastyczność": 25,
    "wygoda_procesu": 20,
    "dodatkowe_korzyści": 15,
    "parametry_max": 5,
    "total": 100
