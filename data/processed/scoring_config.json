  "segment_weights": {
    "description": "Wagi dla różnych segmentów klientów",
    "note": "System automatycznie rozpoznaje segment na podstawie profilu",
    
    "investor": {
      "name": "Inwestor / Developer",
      "criteria": "existing_mortgages > 0 OR loan_amount > 2M OR multiple_properties",
      "weights": {
        "koszt_kredytu": 30,
        "elastyczność": 40,
        "wygoda_procesu": 15,
        "dodatkowe_korzyści": 10,
        "parametry_max": 5
      },
      "rationale": "Inwestorzy priorytetowo traktują elastyczność (karencja, okresy) nad kosztem"
    },
    
    "young_family": {
      "name": "Młoda Rodzina",
      "criteria": "age < 35 AND number_of_children > 0 AND first_mortgage",
      "weights": {
        "koszt_kredytu": 50,
        "elastyczność": 25,
        "wygoda_procesu": 15,
        "dodatkowe_korzyści": 5,
        "parametry_max": 5
      },
      "rationale": "Młode rodziny maksymalizują oszczędności - koszt najważniejszy"
    },
    
    "senior": {
      "name": "Senior (60+)",
      "criteria": "age >= 60",
      "weights": {
        "koszt_kredytu": 25,
        "elastyczność": 20,
        "wygoda_procesu": 35,
        "dodatkowe_korzyści": 15,
        "parametry_max": 5
      },
      "rationale": "Seniorzy cenią wygodę procesu i szybkość decyzji"
    },
    
    "high_earner": {
      "name": "Wysoki Dochód",
      "criteria": "monthly_gross > 25000 AND own_contribution_pct > 30",
      "weights": {
        "koszt_kredytu": 25,
        "elastyczność": 30,
        "wygoda_procesu": 30,
        "dodatkowe_korzyści": 10,
        "parametry_max": 5
      },
      "rationale": "Wysokie dochody - priorytet to czas i komfort, nie koszt"
    },
    
    "first_time_buyer": {
      "name": "Pierwszy Kredyt",
      "criteria": "existing_mortgages == 0 AND age < 40",
      "weights": {
        "koszt_kredytu": 45,
        "elastyczność": 25,
        "wygoda_procesu": 20,
        "dodatkowe_korzyści": 5,
        "parametry_max": 5
      },
      "rationale": "Pierwszy kredyt - ważny każdy grosz oszczędności"
    }
  },
  
