  "special_bonuses": {
    "description": "Dodatkowe punkty za specjalne sytuacje",
    
    "nietypowy_cel": {
      "condition": "purpose IN ['kamienica', 'TBS', 'zakup udziału']",
      "bonus": 5,
      "rationale": "Bonus za akceptację nietypowego celu - mało banków finansuje"
    },
    
    "szybka_decyzja": {
      "condition": "decision_time <= 3 dni",
      "bonus": 3,
      "rationale": "Ekspresowa decyzja kredytowa"
    },
    
    "niski_wkład_bez_ubezpieczenia": {
      "condition": "own_contribution_pct < 20 AND low_contribution_insurance == 'brak'",
      "bonus": 10,
      "rationale": "Rzadkość - niski wkład bez dodatkowych kosztów"
    },
    
    "senior_friendly": {
      "condition": "age > 60 AND max_age >= 75",
      "bonus": 5,
      "rationale": "Bank przyjazny seniorom"
    }
  },
  
  "penalties": {
    "description": "Kary punktowe za niekorzystne warunki",
    
    "wysokie_ubezpieczenie_pomostowe": {
      "condition": "bridge_insurance > 1.0%",
      "penalty": -5,
      "rationale": "Bardzo wysokie ubezpieczenie pomostowe"
    },
    
    "krótkie_terminy_dokumentów": {
      "condition": "avg_document_validity < 30 dni",
      "penalty": -3,
      "rationale": "Stres i pośpiech z dokumentami"
    },
    
    "ograniczona_elastyczność": {
      "condition": "early_repayment_fee >= 3% OR max_period < 300 mc",
      "penalty": -5,
      "rationale": "Brak elastyczności spłaty"
    }
  },
  
